<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivQuickMatchTitle"
        android:layout_width="354dp"
        android:layout_height="327dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/quickmatch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivMatchIcon"
        android:layout_width="159dp"
        android:layout_height="182dp"
        android:layout_marginBottom="52dp"
        android:src="@drawable/palletelogo"
        app:layout_constraintBottom_toTopOf="@+id/btnStartMatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:ignore="UnknownId" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartMatch"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="FIND A PARTNER"
        android:textColor="#1A1230"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/nav_bg"
        android:backgroundTint="#FFD600"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>