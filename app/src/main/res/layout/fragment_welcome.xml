<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    tools:context=".WelcomeFragment">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/absimage"
        android:alpha="0.8"
        android:contentDescription="Artistic Background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"/> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logoart"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="ArtDash Logo"
        app:tint="@color/white"
      />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARTDASH"
        android:textSize="44sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:shadowColor="@color/accentColor"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/appTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your canvas for digital creativity."
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:layout_marginBottom="100dp"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_filled"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="17sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@color/accentColor"
        android:background="@drawable/button_outline"
        android:padding="16dp"
        android:textSize="17sp"
        android:letterSpacing="0.05"
        android:fontFamily="sans-serif-medium"/>
</LinearLayout>
</FrameLayout>