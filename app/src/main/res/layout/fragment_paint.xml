<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1333">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOPIC"
                android:textColor="#88FFFFFF"
                android:textSize="12sp"
                android:letterSpacing="0.1" />
            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_info_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="03:00"
            android:textColor="#FFD600"
            android:textSize="22sp"
            android:textStyle="bold"
            android:focusable="true"
            android:clickable="false" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/canvas_rounded_bg"
        android:elevation="4dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomToolsCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <katzman.yuval.artdash.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomToolsCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#2A1F4D"
        app:cardCornerRadius="100dp"
        app:cardElevation="15dp"
        android:translationZ="20dp"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <ImageButton
                android:id="@+id/btnColorWheel"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_tool"
                android:src="@android:drawable/ic_menu_compass"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Color Picker"
                app:tint="#FFD600" />

            <SeekBar
                android:id="@+id/sbBrushSize"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:max="50"
                android:progress="10"
                android:progressTint="#FFD600"
                android:thumbTint="#FFFFFF"
                android:focusable="true"
                android:clickable="true" />

            <ImageButton
                android:id="@+id/btnUndo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Undo"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnRedo"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:rotation="180"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Redo"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Eraser"
                app:tint="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Clear Canvas"
                app:tint="#FF5252" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>