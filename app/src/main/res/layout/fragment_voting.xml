<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1333">

    <LinearLayout
        android:id="@+id/votingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VOTING FOR:"
                android:textColor="#88FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvVotingTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hot Air Balloon"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvVotingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/glass_info_bg"
            android:padding="12dp"
            android:text="10"
            android:textColor="#FFD600"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/drawingCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/votingActionArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/votingHeader">

        <ImageView
            android:id="@+id/ivVotedDrawing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/votingActionArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate this masterpiece"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:progressTint="#FFD600"
            android:secondaryProgressTint="#FFD600" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>